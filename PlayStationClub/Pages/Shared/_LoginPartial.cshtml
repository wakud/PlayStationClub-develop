@using Microsoft.AspNetCore.Identity
@inject SignInManager<PlayStationClubUser> SignInManager
@inject UserManager<PlayStationClubUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> 
                <img src="~/img/person.svg" />
            </a>
        <div class="header__column">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="header__sign-in btn">Выйти</button>
            </form>
        </div>
}
else
{
        <div class="header__column">
            <a class="header__sign-in btn" asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.RouteUrl(ViewContext.RouteData.Values)">Войти</a>
            <a class="header__sign-in btn" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Url.RouteUrl(ViewContext.RouteData.Values)">Регистрация</a>
        </div>
}

