@page
@model PlayStationClub.Pages.Room.RoomsModel

@{
    ViewData["Title"] = "Rooms - G-STICK";
    ViewData["ImagePath"] = "/img/rooms/";
}

<h3 class="rooms__title">Комнаты</h3>

<div class="rooms">
    <div class="rooms__list">
        @foreach (var room in @Model.Rooms)
        {	
            @if (room != null)
            {
                <div class="rooms__room room">
                    <img src="@(ViewData["ImagePath"] + room.Images.FirstOrDefault().FileName)"/>
                    <a asp-page="/Room/RoomDetails" asp-route-id="@room.Id" class="room__name stretched-link">@room.Name</a>
                </div>
            }
        }
    </div>
</div>