@page
@model PlayStationClub.Pages.Room.OrderSessionModel

<h4 class="text-white-50">БРОНИРОВАНИЕ СЕАНСА</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Session.DateTime" class="control-label">Дата</label>
                <input asp-for="Session.DateTime" class="form-control" type="date" />
                <span asp-validation-for="Session.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.Duration" class="control-label">Длительность</label>
                <input asp-for="Session.Duration" class="form-control" />
                <span asp-validation-for="Session.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Session.DateTime" class="control-label">Время</label>
                <input asp-for="Session.DateTime" class="form-control" type="time" />
                <span asp-validation-for="Session.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Забронировать" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
