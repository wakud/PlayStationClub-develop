@page
@model Delete

@{
    ViewData["Title"] = "Удаление учетной записи";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="text-white-50">@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Удаление вашей учетной записи без возможности восстановить.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password" class="text-light">Введите пароль</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Удалить данные и закрыть мой аккаунт</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
